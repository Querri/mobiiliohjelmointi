<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PlaceEditActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3">

    <!-- title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/title"/>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"/>


    <!-- place type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/place_type"/>

    <RadioGroup
        android:layout_columnSpan="2">

        <RadioButton
            android:id="@+id/rb_indoors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/indoors"/>

        <RadioButton
            android:id="@+id/rb_outdoors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:text="@string/outdoors"/>
    </RadioGroup>


    <!-- route type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="3"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/route_types"/>

    <CheckBox
        android:id="@+id/cb_boulder"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/boulder"/>

    <CheckBox
        android:id="@+id/cb_toprope"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/toprope"/>

    <CheckBox
        android:id="@+id/cb_lead"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/lead"/>


    <!-- route diffs -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/routes_diff"/>

    <EditText
        android:id="@+id/et_route_diff_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="1"
        android:textSize="@dimen/normal_text_size"
        android:hint="@string/route_diff_start"/>

    <EditText
        android:id="@+id/et_route_diff_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="1"
        android:textSize="@dimen/normal_text_size"
        android:hint="@string/route_diff_end"/>

    <!-- desc -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/desc"/>

    <EditText
        android:id="@+id/et_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"/>

    <!-- web -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/web"/>

    <EditText
        android:id="@+id/et_web"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"/>

    <!-- notes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="2"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/notes"/>

    <EditText
        android:id="@+id/et_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"/>

    <CheckBox
        android:id="@+id/cb_parking_free"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/free_parking"/>


    <!-- buttons -->
    <Button
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/back"/>

    <Button
        android:id="@+id/bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/save"/>


</GridLayout>