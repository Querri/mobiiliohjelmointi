<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PlaceEditActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3">

    <!-- title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/title"/>


    <!-- place type -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/place_type"/>

    <TextView
        android:id="@+id/tv_place_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/indoors"/>


    <!-- route types -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/route_types"/>

    <TextView
        android:id="@+id/tv_route_types"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/boulder"/>


    <!-- route diffs -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/routes_diff"/>

    <TextView
        android:id="@+id/tv_route_diff_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="1"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/route_diff_start"/>

    <TextView
        android:id="@+id/tv_route_diff_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="1"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/route_diff_end"/>

    <!-- desc -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/desc"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"/>

    <!-- web -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/web"/>

    <TextView
        android:id="@+id/tv_web"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"/>

    <!-- notes -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowSpan="2"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/colorAccent"
        android:text="@string/notes"/>

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"/>

    <TextView
        android:id="@+id/tv_parking_free"
        android:layout_columnSpan="2"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/free_parking"/>


    <!-- buttons -->
    <Button
        android:id="@+id/bt_routes_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/ar"/>

    <Button
        android:id="@+id/bt_routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/normal_text_size"
        android:text="@string/ar"/>


</GridLayout>

