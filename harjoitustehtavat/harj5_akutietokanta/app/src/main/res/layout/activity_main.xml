<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.harj5_akutietokanta.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/et_number"
                android:textSize="22sp"
                android:hint="@string/number"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_name"
                android:textSize="22sp"
                android:hint="@string/name"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/et_edition"
                android:textSize="22sp"
                android:hint="@string/edition"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:id="@+id/et_date"
                android:textSize="22sp"
                android:hint="@string/date"/>

            <Button
                android:id="@+id/b_add_new"
                android:text="@string/add"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/b_delete_first"
                android:text="@string/delete"
                android:textSize="22sp"/>

        </GridLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="@string/empty_database"
                android:id="@+id/tv_listitem"
                android:textSize="22sp"
                />

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
